<div class="navbar-header">
    <div class="container-fluid">
        <div class="navbar-brand">Spenditorium</div>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu"></button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="navbar-holder">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Providers" Match="NavLinkMatch.All">
                <span class="oi oi-folder" aria-hidden="true"></span> Providers
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}